{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "strict": false,
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "lib": [
      "ESNext", "DOM"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
